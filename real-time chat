<body>

<div class="chat-container">
    <div class="chat-header">Chat App</div>
    <div class="chat-box" id="chatBox"></div>

    <div class="chat-input">
        <input type="text" id="messageInput" placeholder="Type a message...">
        <button onclick="sendMessage()">Send</button>
    </div>
</div>

<script>
    const chatBox = document.getElementById("chatBox");
    const input = document.getElementById("messageInput");

    let messages = JSON.parse(localStorage.getItem("chatMessages")) || [];

    messages.forEach(msg => addMessage(msg.text, msg.type, msg.time));

    function sendMessage() {
        const text = input.value.trim();
        if (text === "") return;

        const time = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});

        addMessage(text, "sent", time);
        saveMessage(text, "sent", time);

        input.value = "";

        setTimeout(() => botReply(), 800);
    }

    function addMessage(text, type, time) {
        const msgDiv = document.createElement("div");
        msgDiv.classList.add("message", type);

        msgDiv.innerHTML = `
            ${text}
            <div class="time">${time}</div>
        `;

        chatBox.appendChild(msgDiv);
        chatBox.scrollTop = chatBox.scrollHeight;
    }

    function saveMessage(text, type, time) {
        messages.push({ text, type, time });
        localStorage.setItem("chatMessages", JSON.stringify(messages));
    }

    function botReply() {
        const replies = [
            "Hello! ðŸ‘‹",
            "How can I help you?",
            "Nice to chat with you ðŸ˜Š",
            "Frontend development is fun ðŸš€",
            "Keep learning ðŸ’ª"
        ];

        const reply = replies[Math.floor(Math.random() * replies.length)];
        const time = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});

        addMessage(reply, "received", time);
        saveMessage(reply, "received", time);
    }
</script>

</body>
